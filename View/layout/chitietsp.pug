extends ./assets/pug/layout
block main
    include ./assets/pug/header_title
    section.header-list.container.py-5.d-flex.gap-2.align-items-center
        a(href="").text-dark.fz-1.fw-600.unlink Trang chủ 
        .list.d-flex.gap-2.align-items-center
            ion-icon(name="ellipse-sharp").color-primary
            a(href="").text-dark.fz-1.fw-600.unlink Sản phẩm 
        .list.d-flex.gap-2.align-items-center
            ion-icon(name="ellipse-sharp").color-primary
            a(href="").text-dark.fz-1.fw-600.unlink Gọng kính
    section.section-detail-primary.container 
        .section-detail-primary-body.row
            .section-detail-primary-left.col 
                img(src="./images/product-3.jpg", alt="").section-detail-primary-img.img-25   
            .section-detail-primary-right.col.border-bottom
                .section-detail-primary-right-content.d-flex.gap-3.flex-column
                    h3.section-detail-primary-right-name.text-dark   GK – 550CN035
                    .section-detail-primary-right-price.fz-2    
                        span.section-detail-primary-right-priceOld.text-danger.fw-500  495,000₫  
                        del.section-detail-primary-right-pricenew.text-dark-80 550,000₫ 
                    .codeProduct.text-dark.fz-1 
                        span Mã sản phẩm:
                        span 550CN035
                    .codeMaterial.text-dark.fz-1  
                        span Chất liệu:
                        span Titantium
                    .codeColor.text-dark.fz-1  
                        span Màu sắc:
                        span Nâu xanh, đen trắng, hồng, nâu, trắng hồng, xanh hồng, xanh sữa, ghi cam, đen hồng, ghi hồng.
                    .section-detail-primary-right-ship.d-flex.align-items-center.gap-2
                        img(src="./images/delivery.png", alt="").section-detail-primary-right-ship-icon.img-05   
                        span.section-detail-primary-right-ship-text.text-dark.fz-1  Miễn phí giao hàng từ 500k ( vận chuyển 3 - 5 ngày )
                    .section-detail-primary-right-quatity.d-flex.align-items-center.gap-2
                        span.text-dark.fz-1  Số lượng
                        input(type="number", name="" value="1").section-detail-primary-right-ship-number.text-dark.w-5.fz-1.border-0 
                    .section-detail-primary-right-footer
                        .section-detail-primary-right-footer-icon.d-flex.align-items-center.gap-2 
                            ion-icon(name="heart-outline").text-dark.fz-16.border.border-secondary.p-1.rounded-3.pointer
                            button.btn.button-app Thêm vào giỏ hàng
    section.section-detail-secondary.container.py-5 
        .section-detail-secondary-body.row
            .section-detail-secondary-left.col
                .row.row-cols-5
                    img(src="./images/product-1.jpg", alt="alt").col 
                    img(src="./images/product-2.jpg", alt="alt").col 
                    img(src="./images/product-3.jpg", alt="alt").col 
            .section-detail-secondary-right.col
                .row-cols-3.row
                   +policyItem("cube-outline","Bảo hành trọn đời","Bảo hành ốc vít rơi ra, gọng lệch, gọng kênh vênh, lỏng chật, rơi ve đệm mũi trọn đời.")
