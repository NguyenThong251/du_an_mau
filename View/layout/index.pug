                .col-4.findMap-body-right 
                    img.col-8.findMap-body-img.img-600(src="/View/layout/images/store-2.jpg", alt="") 
    section.customer.container.py-5
        .customer-header.d-flex.justify-content-between.align-item-center
            .customer-header-left.d-flex.flex-column.gap-1
                span.fw-400.fz-1.text-dark TÌNH THƯƠNG MẾN THƯƠNG
                h3.fw-700.text-dark KHÁCH HÀNG THÂN YÊU
        .customer-body.pt-3
            .row.customer-body-main
                +customerItem("/View/layout/images/person-1","Thong","bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb")
                +customerItem("/View/layout/images/person-1","Thong","bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb")
                +customerItem("/View/layout/images/person-1","Thong","bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb")
    section.question.container
        .question-header.d-flex.justify-content-between.align-item-center
            .question-header-left.d-flex.flex-column.gap-1
                span.fw-400.fz-1.text-dark HỎI ĐÁP 
                h3.fw-700.text-dark KHÁCH HÀNG THÂN YÊU
